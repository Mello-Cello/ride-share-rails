<h1>Trips</h1>
<!-- <div><%= link_to "New Trip", new_trip_path %></div> -->
<p>Below is a list of all trips.</p>

<% @trips.each do |trip| %>
<li>
 Trip <%= link_to trip.id, trip_path(trip.id)%> 
 Driver: <%= link_to Driver.find(trip.driver_id).name, driver_path(trip.driver_id)%>
 Passenger: <%= link_to Passenger.find(trip.passenger_id).name, passenger_path(trip.passenger_id)%>
 Date: <%= trip.date %>
 Rating: <%= trip.rating %>
 Cost: <%= trip.cost/100 %>

<%= link_to "Edit Trip", edit_trip_path(trip.id) %>

<%= link_to "Delete Trip", trip_path(trip.id), method: :delete, data: {confirm: "Are you sure you want to delete this driver?"} %>
</li>
<% end %>
